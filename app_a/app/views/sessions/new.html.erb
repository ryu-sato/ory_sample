<% content_for :no_logout, true %>
<h1>ログイン</h1>

<%= form_with(url: login_path) do |form| %>
  <dl>
    <dt>E-mail</dt>
    <dd><%= form.text_field :email %></dd>
    <dt>Password</dt>
    <dd><%= form.password_field :password %> </dd>
  </dl>
  <div class="actions">
    <%= form.submit 'Login' %>
  </div>
<% end %>
